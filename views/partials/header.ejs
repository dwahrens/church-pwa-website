<body>
  <main class="splash">
    <noscript>
      <!-- anchor linking to external file -->
      <p class="is-size-3 has-text-centered">JavaScript disabled, some functionality will not work!</p>
    </noscript>
    <% if (isMobile) { %>
    <%- include('mobile-menu') -%>
    <% } else { %>
    <%- include('desktop-menu') -%>  
    <% } %>
    <section id="notificationArea">
      <% if (user) { %>
      <input type="hidden" id="firstNameNotification" value="<%= user.first_name %>" />
      <input type="hidden" id="userIdNotification" value="<%= user.id %>" />
      <% } %>
    </section>